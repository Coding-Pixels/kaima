{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7"
  },
  "workspaces": [
    "packages/app",
    "packages/website",
    "packages/functions"
  ],
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint:fix": "lerna run lint:fix"
  }
}
