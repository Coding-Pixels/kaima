{
  "name": "kaima",
  "private": true,
  "devDependencies": {
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2"
  },
  "workspaces": [
    "packages/ui-lib",
    "apps/app",
    "apps/functions",
    "apps/web"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "yarn lint:fix"
    ],
    "*.{json,md,html,js,ts,jsx,tsx}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint:fix": "lerna run lint:fix",
    "build": "lerna run build"
  }
}
